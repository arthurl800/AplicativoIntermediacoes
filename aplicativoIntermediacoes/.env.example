# Database Configuration
DB_DRIVER=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=app_data
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here

# Application Settings
APP_DEBUG=false
APP_ENV=production

# Session Configuration
SESSION_LIFETIME=3600
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Table Names (optional - uses defaults if not set)
TABLE_INTERMEDIACOES=INTERMEDIACOES
TABLE_INTERMEDIACOES_NEGOCIADA=INTERMEDIACOES_TABLE_NEGOCIADA
TABLE_USERS=USUARIOS
TABLE_NEGOCIACOES=NEGOCIACOES

# File Upload Settings
MAX_UPLOAD_SIZE=104857600
UPLOAD_TEMP_DIR=tmp/

# Logging
LOG_LEVEL=info
LOG_PATH=logs/app.log
