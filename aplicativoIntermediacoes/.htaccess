# =====================================================
# HTACCESS OTIMIZADO PARA INFINITYFREE
# =====================================================

# Segurança - Ocultar arquivos sensíveis
<FilesMatch "^\.env">
    Require all denied
</FilesMatch>

<FilesMatch "^(composer\.json|setup_database\.sql|check_deploy\.php)$">
    Require all denied
</FilesMatch>

# Configurações PHP (compatível com InfinityFree)
# Nota: InfinityFree pode ignorar algumas destas configurações
<IfModule mod_php7.c>
    php_value memory_limit 256M
    php_value max_execution_time 300
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>

# Habilita compressão para melhor performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Proteção de diretórios
Options -Indexes +FollowSymLinks

# Página inicial padrão
DirectoryIndex index.php index.html

# Redireciona tudo para index.php (front controller)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Proteger diretórios sensíveis (sem flag F que pode causar 403)
    RewriteRule ^config/.*$ - [NC,L,R=404]
    RewriteRule ^logs/.*$ - [NC,L,R=404]
    RewriteRule ^vendor/(?!autoload\.php).*$ - [NC,L,R=404]
    
    # Permite acesso direto a arquivos e diretórios existentes
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redireciona tudo para index.php
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>

# Cabeçalhos de segurança
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
